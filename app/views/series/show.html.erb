<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @series.title %>
</p>

<p>
  <strong>Desc:</strong>
  <%= @series.desc %>
</p>


<% @series.videos.each do |video| %>

  <div class="video_preview">
    <%= link_to (video) do %>
      <img src= <%=video.poster%> /><br>
    <%end%>
    <%=video.title%><br>
    <%=video.desc%>
  </div>

<% end %>
