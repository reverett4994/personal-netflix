    <%= f.label :season %><br>
    <%= f.number_field :season %>
  </div>
  <div class="field">
    <%= f.label :episode %><br>
    <%= f.number_field :episode %>
  </div>
  <div class="field">
    <%= f.label :desc %><br>
    <%= f.text_area :desc %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :genre %><br>
    <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.file_field :content %>
  </div>
